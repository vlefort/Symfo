{% extends 'base.html.twig' %}

{% block title %}Bars{% endblock %}

{% block body %}
    <h1>Bars</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bar.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ bar.Nom }}</td>
            </tr>
            <tr>
                <th>Alcools</th>
                <td>{{ bar.Alcools }}</td>
            </tr>
            <tr>
                <th>Diffusions</th>
                <td>{{ bar.Diffusions ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Terasse</th>
                <td>{{ bar.Terasse ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ bar.Adresse }}</td>
            </tr>
            <tr>
                <th>Photos</th>
                <td>{{ bar.Photos }}</td>
            </tr>
            <tr>
                <th>Notations</th>
                <td>{{ bar.Notations }}</td>
            </tr>
                <th>Commentaires</th>
                <td>{{ bar.Commentaires }}</td>
            </tr>
            <tr>
                <th>Evaluation</th>
                <td>{{ avgEvaluations }}</td>
            </tr>

        </tbody>
    </table>
    <H2>Espace commentaire</H2>
        <ul class="list-unstyled mt-3">
            {% for comment in bar.Commentaires %}
                <li class="media shadow p-3 mb-3 bg-white rounded">
                    <div class="media-body">
                        <h5 class="mt-0 mb-1 text-primary">
                            Auteur : {{ comment.auteur.username }}
                        </h5>
                        <p>  {{ comment.message }} </p>
                        <span class="text-muted">Date de publication : le {{ comment.PublishDate|date("d/m/Y H\\hi") }}</span>
                    </div>
                </li>
            {% endfor %}
        </ul>


    <h1>Ajouter un commentaire</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}


    <a href="{{ path('bars_index') }}">back to list</a>

    <a href="{{ path('bars_edit', {'id': bar.id}) }}">edit</a>

    {{ include('bars/_delete_form.html.twig') }}
{% endblock %}